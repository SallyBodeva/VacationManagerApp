@model EditProjectViewModel

<h2>Edit project</h2>

<div class="row">
    <div class="col-md-4">    </div>
    <div class="col-md-4">
        <form id="registerForm" asp-action="Edit" method="post">
            <h2>Edit project</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="ProjectName" class="form-control" aria-required="true" />
                <label asp-for="ProjectName">Project name</label>
                <span asp-validation-for="ProjectName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Description" class="form-control" aria-required="true" />
                <label asp-for="Description">Description</label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-primary">Update</button>
        </form>
    </div>
    <p></p>
    <p></p>
    <p></p>
    <p></p>
