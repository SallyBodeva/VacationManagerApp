@model IndexProjectsViewModel

@{
    ViewData["Title"] = "Projects";
}

<h1>Projects</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Project Name
            </th>
            <th>
               Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Projects.Count!=0)
        {
            @foreach (var project in Model.Projects)
            {
                <tr>
                    <td>
                        @project.Name
                    </td>
                    <td>
                        @project.Description
                    </td>
                    <td>
                        <a asp-action="Details" asp-action="Details" asp-route-id="@project.Id" class="btn btn-sm btn-success">Details</a>
                        <a asp-action="Edit" asp-action="Edit" asp-route-id="@project.Id" class="btn btn-sm btn-secondary">Edit</a>
                        <form asp-action="Delete" asp-route-id="@project.Id" class="delete-button">
                            <input class="text-danger" type="submit" value="Delete" />
                        </form>
                    </td>
                </tr>
            }
        }
        
    </tbody>
</table>
