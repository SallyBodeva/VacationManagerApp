@{
    Layout = null; // This line removes the default layout
}

<!DOCTYPE html>
<html>
<head>
    <title>Redirect View</title>
    <style>
        /* Center the heading */
        .center {
            text-align: center;
        }

        /* Style the buttons */
        .btn {
            display: inline-block;
            padding: 10px 20px;
            margin: 10px;
            text-align: center;
            text-decoration: none;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="center">
        <h1>Apply for: </h1>
        <div>
            <a href="@Url.Action("CreateSickLeave", "Requests")" class="btn">sick leave</a>
            <a href="@Url.Action("CreateVacation", "Requests")" class="btn">vacation</a>
        </div>
    </div>
</body>
</html>
